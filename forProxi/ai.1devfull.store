# Редирект с 80 на 443
server {
    listen 80;
    server_name ai.1devfull.store www.ai.1devfull.store;
    location ^~ /.well-known/acme-challenge/ {
        root /var/www/letsencrypt;        # оставляем для авто-продления
        default_type "text/plain";
        allow all;
    }
    return 301 https://$host$request_uri;
}

# Основной HTTPS
server {
    listen 443 ssl http2;
    server_name ai.1devfull.store;

    ssl_certificate     /etc/letsencrypt/live/ai.1devfull.store/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/ai.1devfull.store/privkey.pem;

    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers on;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;
    ssl_session_tickets off;

    client_max_body_size 100m;

    location / {
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        proxy_request_buffering off;
        proxy_buffering off;
        proxy_buffers 8 16k;
        proxy_buffer_size 32k;

        proxy_pass_request_headers on;
        proxy_set_header Host              api.openai.com;
        proxy_set_header Authorization     $http_authorization;
        proxy_set_header Content-Type      $http_content_type;
        proxy_set_header Content-Length    $http_content_length;
        proxy_set_header X-Real-IP         $remote_addr;
        proxy_set_header X-Forwarded-For   $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        proxy_pass https://api.openai.com;
        proxy_ssl_server_name on;

        proxy_connect_timeout 60s;
        proxy_read_timeout 300s;
        proxy_send_timeout 300s;

        proxy_set_header Accept-Encoding "";
        proxy_set_header Accept "*/*";

        proxy_intercept_errors on;
        error_page 502 503 504 /50x.html;

        add_header X-Proxy-Status $upstream_status;
        add_header X-Proxy-Response-Time $upstream_response_time;
    }

    location ~* \.(jpg|jpeg|png|gif|webp)$ {
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        proxy_request_buffering off;
        proxy_buffering off;

        proxy_set_header Host          api.openai.com;
        proxy_set_header Authorization $http_authorization;
        proxy_set_header Content-Type  $http_content_type;
        proxy_set_header Content-Length $http_content_length;

        proxy_pass https://api.openai.com;
        proxy_ssl_server_name on;

        proxy_connect_timeout 60s;
        proxy_read_timeout 300s;
        proxy_send_timeout 300s;
    }

    error_page 502 503 504 /50x.html;
    location = /50x.html { root /usr/share/nginx/html; }
}
